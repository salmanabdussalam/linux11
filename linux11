#include<stdio.h>
int main()
{
    int i, j, n, time, remain, flag = 0, tq;
    int TotWT = 0, TotTA = 0, AT[100], b[100], rt[100];

    printf("Masukkan jumlah proses : ");
    scanf("%d", &n);

    remain = n;
    for(i = 0; i < n; i++)
    {
        printf("Masukkan arrival time untuk Proses P%d : ", i + 1);
        scanf("%d", &AT[i]);

        printf("Masukkan burst time untuk Proses P%d : ", i + 1);
        scanf("%d", &b[i]);

        rt[i] = b[i];
    }

    printf("Masukkan time quantum : ");
    scanf("%d", &tq);

    // Header tabel
    printf("\n+---------+------------------+--------------+\n");
    printf("| Process | Turnaround Time  | Waiting Time |\n");
    printf("+---------+------------------+--------------+\n");

    for(time = 0, i = 0; remain != 0; )
    {
        if(rt[i] <= tq && rt[i] > 0)
        {
            time += rt[i];
            rt[i] = 0;
            flag = 1;
        }
        else if(rt[i] > 0)
        {
            rt[i] -= tq;
            time += tq;
        }

        if(rt[i] == 0 && flag == 1)
        {
            remain--;

            int TAT = time - AT[i];
            int WT  = time - AT[i] - b[i];

            // Cetak baris tabel
            printf("|  P[%d]   |        %2d        |      %2d      |\n",
                   i + 1, TAT, WT);

            TotWT += WT;
            TotTA += TAT;
            flag = 0;
        }

        if(i == n - 1)
            i = 0;
        else if(AT[i + 1] <= time)
            i++;
        else
            i = 0;
    }

    // Footer tabel
    printf("+---------+------------------+--------------+\n");

    printf("\nAverage Waiting Time = %f\n", TotWT * 1.0 / n);
    printf("Average Turnaround Time = %f\n", TotTA * 1.0 / n);

    return 0;
}
